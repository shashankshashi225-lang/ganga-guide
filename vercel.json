{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/about-us",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/about-us/",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/our-pooja",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/our-pooja/",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/guests-testimonial",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/guests-testimonial/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/testimonials",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/testimonials/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/find-out-more",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/find-out-more/",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/journey-into-the-soul",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/journey-into-the-soul/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/journey-into-the-soul-of-spiritual-india",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/tours",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/tours/",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/tour-packages",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/tour-packages/",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/contact",
      "destination": "/booking",
      "permanent": true
    },
    {
      "source": "/contact/",
      "destination": "/booking",
      "permanent": true
    },
    {
      "source": "/contact-us",
      "destination": "/booking",
      "permanent": true
    },
    {
      "source": "/contact-us/",
      "destination": "/booking",
      "permanent": true
    },
    {
      "source": "/varanasi",
      "destination": "/destination/varanasi",
      "permanent": true
    },
    {
      "source": "/varanasi/",
      "destination": "/destination/varanasi",
      "permanent": true
    },
    {
      "source": "/ayodhya",
      "destination": "/destination/ayodhya",
      "permanent": true
    },
    {
      "source": "/ayodhya/",
      "destination": "/destination/ayodhya",
      "permanent": true
    },
    {
      "source": "/sarnath",
      "destination": "/destination/sarnath",
      "permanent": true
    },
    {
      "source": "/sarnath/",
      "destination": "/destination/sarnath",
      "permanent": true
    },
    {
      "source": "/services",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/services/",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/kashi-darshan",
      "destination": "/packages/tourist",
      "permanent": true
    },
    {
      "source": "/kashi-darshan/",
      "destination": "/packages/tourist",
      "permanent": true
    },
    {
      "source": "/ganga-aarti",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/ganga-aarti/",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/prayagraj",
      "destination": "/destination/prayagraj",
      "permanent": true
    },
    {
      "source": "/prayagraj/",
      "destination": "/destination/prayagraj",
      "permanent": true
    },
    {
      "source": "/ujjain",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/ujjain/",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/pooja",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/pooja/",
      "destination": "/packages/pooja",
      "permanent": true
    },
    {
      "source": "/blogs",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/blogs/",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/home/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/blogs/(.*)",
      "destination": "/blog/$1",
      "permanent": true
    },
    {
      "source": "/destinations/(.*)",
      "destination": "/destination/$1",
      "permanent": true
    },
    {
      "source": "/gallery(/)?",
      "destination": "/destinations",
      "permanent": true
    },
    {
      "source": "/faq(/)?",
      "destination": "/packages",
      "permanent": true
    },
    {
      "source": "/(.*)/$",
      "destination": "/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api|assets|sitemap.xml|robots.txt).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}